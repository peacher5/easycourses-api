  "paths": {
    "/students": {
      "get": {
        "summary": "Get All Students",
        "tags": [
          "Students"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "national_id": {
                        "type": "string"
                      },
                      "firstname": {
                        "type": "string"
                      },
                      "lastname": {
                        "type": "string"
                      },
                      "nickname": {
                        "type": "string"
                      },
                      "education_level": {
                        "type": "string"
                      },
                      "school": {
                        "type": "string"
                      },
                      "tel_no": {
                        "type": "string"
                      }
                    }
                  }
                },
                "examples": {
                  "Example 1": {
                    "value": {
                      "id": 1,
                      "national_id": "1100100234567",
                      "firstname": "พีรณัฐ",
                      "lastname": "วัฒนากุลศิริ",
                      "nickname": "พีช",
                      "education_level": "M4",
                      "school": "โรงเรียนเตรียมอุดมศึกษาน้อมเกล้า",
                      "tel_no": "0923456789"
                    }
                  }
                }
              }
            }
          }
        },
        "operationId": "get_students",
        "description": "ดึงข้อมูลนักเรียนทั้งหมด เป็น List ของ Student ข้อมูลมีตามตัวอย่าง"
      },
      "post": {
        "summary": "Create Student",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        },
        "description": "เพิ่มข้อมูลนักเรียนใหม่",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "national_id": {
                    "type": "string"
                  },
                  "firstname": {
                    "type": "string"
                  },
                  "lastname": {
                    "type": "string"
                  },
                  "nickname": {
                    "type": "string"
                  },
                  "gender": {
                    "type": "string",
                    "enum": [
                      "MALE",
                      "FEMALE",
                      "OTHER"
                    ]
                  },
                  "date_of_birth": {
                    "type": "string"
                  },
                  "tel_no": {
                    "type": "string"
                  },
                  "education_level": {
                    "type": "string",
                    "enum": [
                      "P1",
                      "P2",
                      "P3",
                      "P4",
                      "P5",
                      "P6",
                      "M1",
                      "M2",
                      "M3",
                      "M4",
                      "M5",
                      "M6",
                      "NA"
                    ]
                  },
                  "school": {
                    "type": "string"
                  }
                },
                "required": [
                  "national_id",
                  "firstname",
                  "lastname",
                  "nickname",
                  "gender",
                  "date_of_birth",
                  "tel_no",
                  "education_level",
                  "school"
                ]
              }
            }
          },
          "description": ""
        },
        "operationId": "post_students",
        "tags": [
          "Students"
        ]
      }
    },
    "/courses": {
      "get": {
        "summary": "Get All Courses",
        "tags": [
          "Courses"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "description": "ดึงข้อมูลรายวิชา",
        "operationId": "courses"
      }
    }
  }
}